<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Money" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- AppCompat themes -->
        <item name="colorPrimary">@color/money_color_primary</item>
        <item name="colorPrimaryDark">@color/money_color_primary_dark</item>
        <item name="colorAccent">@color/money_color_accent</item>

        <item name="bg_main">@style/BG_Main.Green</item>
        <item name="myText">@style/Text.Light</item>
        <item name="myButtonBarStyle">@style/TextAppearance.EasySal.Button</item>
    </style>

    <style name="Theme.Setting" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- AppCompat themes -->
        <item name="colorPrimary">@color/money_color_primary</item>
        <item name="colorPrimaryDark">@color/money_color_primary_dark</item>
        <item name="colorAccent">@color/money_color_accent</item>
        <item name="bg_main">@style/BG_Main.Green</item>
        <item name="myText">@style/Text.Light</item>
        <item name="myButtonBarStyle">@style/TextAppearance.EasySal.Button</item>
    </style>

    <style name="TextAppearance.EasySal" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.EasySal.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/money_color_accent</item>
    </style>

    <style name="ThemeOverlay.EasySal" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorForeground">@color/bright_foreground_material_dark</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.EasySal.Tab">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- Styles -->
    <style name="Results"/>

    <style name="Results.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/result_font_size</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="ic_action_theme">@drawable/ic_action_theme_dark</item>
    </style>
    <!-- The themes -->
    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="pagertitle">@style/PagerTitleStrip</item>
        <item name="ic_action_theme">@drawable/ic_action_theme_light</item>
        <item name="bg_main">@style/BG_Main</item>
        <item name="spinner_dropdown_item">@style/SpinnerDropdownItem</item>
        <item name="spinner_item">@style/SpinnerDropdownItem</item>
        <item name="myButtonBarStyle">@style/ButtonBar</item>
        <item name="myText">@style/Text</item>
        <item name="contentBackground">@style/ContentBackground.Light</item>
    </style>
    <!-- TODO - Search for Holo. Remove them and move it to Styles 11. -->
    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="ic_action_theme">@drawable/ic_action_theme_dark</item>
        <item name="pagertitle">@style/PagerTitleStrip.Dark</item>
        <item name="bg_main">@android:style/Theme.Holo</item>
        <item name="spinner_dropdown_item">@style/SpinnerDropdownItem</item>
        <item name="spinner_item">@style/SpinnerDropdownItem</item>
        <item name="myText">@style/Text</item>
        <item name="myButtonBarStyle">@style/ButtonBar.Dark</item>
        <item name="contentBackground">@style/ContentBackground</item>
    </style>

    <style name="GreenAppTheme" parent="AppTheme">
        <item name="pagertitle">@style/PagerTitleStrip.Green</item>
        <item name="android:actionBarStyle">@style/ActionBar.Green</item>
        <item name="actionBarStyle">@style/ActionBar.Green</item>
        <item name="myText">@style/Text.Light</item>
        <item name="spinner_dropdown_item">@style/SpinnerDropdownItem.Green</item>
        <item name="spinner_item">@style/SpinnerDropdownItem.Green</item>
        <item name="bg_main">@style/BG_Main.Green</item>
        <item name="android:actionBarTabStyle">@style/ActionBar.TabView.Green</item>
        <item name="actionBarTabStyle">@style/ActionBar.TabView.Green</item>
        <item name="myButtonBarStyle">@style/ButtonBar</item>
    </style>

    <!-- Actionbar styles -->
    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="icon">@drawable/ic_launcher</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="displayOptions">showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.Green">
        <item name="android:background">@color/black</item>
        <item name="background">@color/black</item>
    </style>

    <style name="ActionBar.TitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/actionbar_text_size</item>
    </style>

    <!-- This is the style for the selected view -->
    <style name="ActionBar.TabView" parent="Widget.AppCompat.ActionBar.TabView" />

    <style name="ActionBar.TabViewLight" parent="Widget.AppCompat.Light.ActionBar.TabView.Inverse"/>

    <style name="ActionBar.TabView.Green">
        <item name="android:background">@drawable/tab_white_ab</item>
    </style>

    <style name="ActionBar.TabText" parent="Widget.AppCompat.Light.ActionBar.TabText.Inverse"/>

    <!-- Pager styles -->
    <style name="PagerTitleStrip">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/pagertitle_text_size</item>
        <item name="android:background">#33b5e5</item>
    </style>

    <style name="PagerTitleStrip.Green">
        <item name="android:background">@color/money_pager</item>
    </style>

    <style name="PagerTitleStrip.Dark">
        <item name="android:background">#535353</item>
    </style>

    <!-- Styles for the background -->
    <style name="BG_Main">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BG_Main.Green">
        <item name="android:background">@color/money_bg_green_light</item>
    </style>

    <!-- Styles for the spinner text -->
    <style name="SpinnerDropdownItem" parent="@android:style/TextAppearance.Holo"></style>

    <style name="SpinnerDropdownItem.Green">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance" />

    <style name="Text.Light">
        <item name="android:textColor">#000</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Holo.Dialog" />

    <style name="DialogLight" parent="@android:style/Theme.Holo.Light.Dialog" />

    <style name="DialogLight.Money" parent="@android:style/Theme.Holo.Light.Dialog" />

    <style name="ButtonBar" parent="@android:style/ButtonBar">
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:paddingBottom">16dip</item>
        <item name="android:dividerPadding">12dip</item>
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ButtonBar.Dark">
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/item_background_holo_dark</item>
    </style>

    <style name="ButtonBar.Money">
        <item name="android:background">@drawable/selectable_background_money</item>
    </style>

    <style name="EditTextMoney" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ContentBackground">
        <item name="android:background">@drawable/ab_solid_dark_holo</item>
    </style>

    <style name="ContentBackground.Light">
        <item name="android:background">@drawable/ab_solid_light_holo</item>
    </style>

    <style name="ContentBackground.Money">
        <item name="android:background">@drawable/ab_bottom_solid_money</item>
    </style>

</resources>