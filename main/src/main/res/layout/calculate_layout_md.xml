<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="@dimen/padding_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp">

                <requestFocus/>
            </EditText>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/main_wage_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.asa.easysal.widget.CancelEditText
                    android:id="@+id/main_wage_field"
                    style="?myText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/main_wage_label"
                    android:ellipsize="none"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/main_hours_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.asa.easysal.widget.CancelEditText
                    android:id="@+id/main_hours_field"
                    style="?myText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/main_hours_label"
                    android:ellipsize="none"
                    android:ems="10"
                    android:hint="@string/hint_hours"
                    android:inputType="numberDecimal"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_calculate"
        style="?myButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:filterTouchesWhenObscured="true"
        android:maxLines="2"
        android:text="@string/button_calculate"/>
</LinearLayout>